{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "src",
  "testRegex": ".*\\.(spec|test)\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": ["ts-jest", { "isolatedModules": true }]
  },
  "collectCoverageFrom": ["**/*.(t|j)s"],
  "coverageDirectory": "../coverage",
  "testEnvironment": "node"
}
